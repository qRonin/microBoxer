@code {
    [Parameter]
    public EventCallback<string> actionResult { get; set; }
    public async Task PeekInsideClicked()
    {
        actionResult.InvokeAsync("PeekInsideClicked");
    }
    public async Task EditClicked()
    {
        actionResult.InvokeAsync("EditClicked");
    }
    public async Task DeleteClicked()
    {
        actionResult.InvokeAsync("DeleteClicked");
    }
    public async Task ScanClicked()
    {
        actionResult.InvokeAsync("InvokeAsync");
    }
}
