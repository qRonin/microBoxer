                    <path fill-rule="evenodd" d="M0 15.5a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 0-1H1.707l8.147-8.146a.5.5 0 0 0-.708-.708L1 14.293V10.5a.5.5 0 0 0-1 0z" />
                </svg>
            </li>
            <li class="nav-item">
                @*<img role="presentation" src="icons/pencil.svg" class="edit-icon" />*@
